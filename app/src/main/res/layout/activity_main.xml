<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        >
        <TextView
            android:id="@+id/app_Name"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="140dp"
            android:textSize="32dp"
            android:layout_column="0"
            />
        <Button
            android:id="@+id/btn_main_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAlignment="center"
            android:layout_column="1"
            android:onClick="carregaItemMenu"
            />
    </GridLayout>


    <Button
        android:id="@+id/btn_main_receitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_main_receitas"
        android:textAlignment="center"
        android:onClick="carregaItemMenu"
        />
    <Button
        android:id="@+id/btn_main_Medidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medidas"
        android:textAlignment="center"
        android:onClick="carregaItemMenu"
        />

    <Button
        android:id="@+id/btn_main_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAvoritos"
        android:textAlignment="center"
        android:onClick="carregaItemMenu"
        />

</LinearLayout>
