<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="insira um ID para pesquisa"/>
    <Button
        android:id="@+id/btn_medida_gerar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trazer medidas"
        android:onClick="gerarJSON"
        />
    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="insira um Nome para registar"/>
    <EditText
        android:id="@+id/edit_abre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="insira uma abreveação par registrar"/>
    <Button
        android:id="@+id/btn_medida_inserir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inserir medida"
        android:onClick="inserirMedida"
        />

    <TextView
        android:id="@+id/txt_id_medida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_nome_medida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_abre_medida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/respostaJSONtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/list_medidas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>